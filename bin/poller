#!/usr/bin/perl -Ilib 

use strict;
use warnings;
use Getopt::Long;
use Pod::Usage;
use Config::General;
use Data::Dumper;
use File::Copy;
use FindBin;
use Trudy;
use Trudy::Registry;

#####################
my $help;
my $man;
my $conf = $FindBin::Bin.'/../etc/poller.conf';
my $debug;
my $migrate;

GetOptions(
    "config|c=s"   => \$conf,
    "verbose|v"    => \$debug,
    "migrate|m"    => \$migrate,
    'help|?'       => \$help,
    "man"          => \$man,
) or pod2usage(2);
pod2usage(1) if $help;
pod2usage( -exitstatus => 0, -verbose => 2 ) if $man;

# read the config
my $_conf = new Config::General($conf);
my $config = $_conf->{DefaultConfig};
$config->{debug} = 1 if $debug;

# poll the queue
my $sock = Trudy::setup($conf);
my $login = Trudy::Registry::login($conf, $sock);
print STDERR Dumper($login) ;
die "Could not log in: ".$login->{response}->{result}->{msg}->{content} 
    unless $login->{response}->{result}->{code} == 1000;
#Trudy::run($config);

#if($migrate){
#    Trudy::migrate_results($work_db, $base_db, $debug);
#}

=head1 NAME

trudy - a CLI interface to Trudy, a EPP stress test tool

=head1 VERSION

Version 0.01

=head1 SYNOPSIS

trudy [options]

 Options:
   -config|c        config file
   -datafile|d      data file
   -migrate|m       migrate succesful results back into the template DB
   -help|?          brief help message
   -verbose|v       be chatty
   -man             full documentation

 Data file:
   [command]
     key = value


