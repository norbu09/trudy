#!/usr/bin/env perl

use Mojolicious::Lite;
use FindBin;
use lib "$FindBin::Bin/../lib";
use Trudy;

unshift(@ARGV, 'daemon');

my $db = $ARGV[1];
die "Usage: $0 [DB file]\n" unless $db;

get '/' =>  sub  {
    my $self = shift;

    $self->stash->{db} = $db;
    $self->stash->{stats} = Trudy::get_result_summary($db);
    
} => 'index';

get '/command/:command' => sub  {
    my $self = shift;
    my $command = $self->param('command');
    
    $self->stash->{command} = $command;
    $self->stash->{commands} = Trudy::get_command_summary($db, $command);

} => 'command';

get '/code/:code' => sub  {
    my $self = shift;
    my $code = $self->param('code');
    
    $self->stash->{code} = $code;
    $self->stash->{codes} = Trudy::get_code_summary($db, $code);

} => 'code';

get '/:groovy' => sub {
    my $self = shift;
    $self->render(text => $self->param('groovy'), layout => 'default');
};

app->start;
__DATA__

@@ index.html.ep
% layout 'default';
<h1>overview of Trudy DB</h1><h2>(<%= $db %>)</h2>

<table>
% foreach my $line (@$stats) {
<tr>
  <td>
    <%= $line->{amt} %>
  </td>
  <td>
    <a href="/command/<%= $line->{command} %>"><%= $line->{command} %></a>
  </td>
  <td>
    <%= $line->{message} %>
  </td>
  <td>
    <a href="/code/<%= $line->{code} %>">(<%= $line->{code} %>)</a>
  </td>
</tr>
% }
</table>

@@ command.html.ep
<h1><%= $command %></h1>
<table>
% foreach my $line (@$commands) {
<tr>
  <td>
    <%= $line->{command} %>
  </td>
  <td>
    <%= $line->{message} %>
  </td>
  <td><pre>
    <%= $line->{input} %>
  </pre></td>
  <td><pre>
    <%= $line->{output} %>
  </pre></td>
</tr>
% }
</table>

@@ code.html.ep
<h1><%= $code %></h1>
<table>
% foreach my $line (@$codes) {
<tr>
  <td>
    <%= $line->{command} %>
  </td>
  <td>
    <%= $line->{message} %>
  </td>
  <td><pre>
    <%= $line->{input} %>
  </pre></td>
  <td><pre>
    <%= $line->{output} %>
  </pre></td>
</tr>
% }
</table>

@@ layouts/default.html.ep
<!doctype html><html>
    <head><title>Trudy!</title></head>
    <body><%== content %></body>
</html>
